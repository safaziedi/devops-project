pipeline {
    agent any
    tools {
        maven 'maven_3.9.5'
    }
    stages {
        stage('Get Code from Github & clean workspace before build') {
                steps {
                    // Clean before build
                    cleanWs()
                    // We need to explicitly checkout from SCM here
                    checkout scmGit(branches: [[name: '*/develop']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/safaziedi/spring-boot-angular-postgresql']])
                }
        }

        stage('Build maven'){
            steps{
                dir('./back') {
                    sh 'mvn clean package'
                    archiveArtifacts artifacts: 'target/*.jar', onlyIfSuccessful: true
                }
            }
        }
        stage('Sonar Qube Analysis') {
            steps {
                dir('./back') {
                    withSonarQubeEnv('sonar'){
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Upload jar To Nexus') {
            steps {
                dir('./back') {
                script {
                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: 'spring-boot-jpa-postgresql', 
                            classifier: '', 
                            file: 'target/backend-0.0.1-SNAPSHOT.jar', 
                            type: 'jar'
                        ]
                        ], 
                        credentialsId: 'nexus', 
                        groupId: 'bezkoder', 
                        nexusUrl: 'nexus:8081/repository/backend/', 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: 'http://nexus:8081/repository/backend/', 
                        version: '0.0.1-SNAPSHOT'
                }
            }
            }
        }
    }
}